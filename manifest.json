{
  "manifest_version": 3,
  "name": "Gemini EPUB Reader",
  "version": "1.0",
  "description": "A modern, offline-capable EPUB reader.",
  "icons": {
    "192": "icon_192.png",
    "512": "icon_512.png"
  },
  "action": {
    "default_title": "Open Reader"
  },
  "background": {
    "service_worker": "background.js"
  },
  "permissions": [
    "storage", 
    "unlimitedStorage"
  ],
  "web_accessible_resources": [
    {
      "resources": [
          "css/*", 
          "js/*", 
          "pwa/*", 
          "books/*"
      ],
      "matches": ["<all_urls>"]
    }
  ]
}